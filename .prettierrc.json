{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 200,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",

  "htmlWhitespaceSensitivity": "css",
  "singleAttributePerLine": false,

  "overrides": [
    {
      "files": ["*.html"],
      "options": { "parser": "html" }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": { "singleQuote": false }
    }
  ]
}
